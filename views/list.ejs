<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% newListItems.map(listItem => { %>

  <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        name="checkbox"
        value="<%=listItem._id%>"
        onChange="this.form.submit()"
      />
      <p><%= listItem.name %></p>
    </div>
  </form>

  <% }) %>

  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button type="submit" name="list">+</button>
  </form>
</div>

<%- include("footer") -%>
